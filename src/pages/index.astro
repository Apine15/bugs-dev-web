---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Services from '../components/Services.astro';
import Portfolio from '../components/Portfolio.astro';
import Contact from '../components/Contact.astro';
import Team from '../components/Team.astro';
---

<Layout title="Bugs Dev | Transformamos ideas">
	
	<Navbar slot="navbar" />

	<section class="flex flex-col items-center justify-center min-h-[90vh] text-center px-4 pt-20">
		
		<h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight">
			Hola, somos <span class="text-brand-lime">Bugs Dev</span>
		</h1>
		
		<p class="text-xl md:text-2xl mb-10 max-w-2xl opacity-90 leading-relaxed">
			Transformamos tus ideas en software potente. 
			<br class="hidden md:block" />
			Estrategia, código y diseño en un solo lugar.
		</p>

		<div class="flex flex-col md:flex-row gap-4">
			<a href="#contacto" class="bg-brand-crimson text-white px-8 py-4 rounded-lg font-bold text-lg hover:brightness-110 transition shadow-lg shadow-brand-crimson/20">
				Empezar proyecto
			</a>
			<a href="#portfolio" class="border-2 border-brand-lime text-brand-lime px-8 py-4 rounded-lg font-bold text-lg hover:bg-brand-lime hover:text-brand-bg transition">
				Ver trabajos
			</a>
		</div>

	</section>

	<Services />

	<Portfolio />

	<Team />

	<Contact />

</Layout>
