---
const team = [
  {
    name: "Andrea Pineda", 
    role: "Frontend Lead & Agritech Specialist", // Tu fuerte + tu nicho
    // Opción B si prefieres destacar lo técnico general: "Full Stack Dev & UI/UX Lead"
    avatar: "/images/team/andrea.jpg", 
    portfolio: "https://apine15.github.io/portfolio-personal/"
  },
  {
    name: "Lucas Cinquegrani", // El que va a la base de datos
    role: "Backend Architect & Database Specialist",
    avatar: "images/team/lucas.jpg",
    portfolio: "#"
  },
  {
    name: "José Robledo", // El de los servidores
    role: "Backend Lead & DevOps Engineer",
    avatar: "images/team/jose.jpg",
    portfolio: "#"
  }
];
---

<section id="equipo" class="py-20 px-6 md:px-12 border-t border-white/5 bg-black/40">
  <div class="max-w-6xl mx-auto text-center">
    
    <h2 class="text-3xl md:text-5xl font-bold mb-16">
      El equipo <span class="text-brand-lime">Bugs Dev</span>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      {team.map((member) => (
        <div class="flex flex-col items-center group">
          
          <div class="w-40 h-40 rounded-full border-4 border-brand-crimson md:border-white/10 p-1 mb-6 group-hover:border-brand-crimson transition-colors duration-300">
            <img 
              src={member.avatar} 
              alt={member.name} 
              class="w-full h-full rounded-full object-cover grayscale-0 md:grayscale md:group-hover:grayscale-0 transition-all duration-500"
            />
          </div>

          <h3 class="text-2xl font-bold text-white mb-2">{member.name}</h3>
          <p class="text-brand-lime font-medium mb-4">{member.role}</p>
          
          <a 
            href={member.portfolio} 
            target="_blank"
            class="text-sm opacity-60 hover:opacity-100 hover:text-brand-crimson transition-all flex items-center gap-1"
          >
            Ver Portfolio Personal 
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" x2="21" y1="14" y2="3"/></svg>
          </a>

        </div>
      ))}
    </div>

  </div>
</section>