---
import '../styles/global.css';

// Props: Para que cada página pueda pasar su propio título
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Agencia de desarrollo de software especializada en soluciones Agrotech, aplicaciones de escritorio y desarrollo web a medida con Python y Django." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>

		<meta name="author" content="Bugs Dev Team" />
		<meta name="keywords" content="Desarrollo Software, Agrotech, Python, Django, Astro, Santiago del Estero, Programación a medida" />

		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://bugs-dev.com/" /> <meta property="og:title" content={title} />
		<meta property="og:description" content="Transformamos ideas en software potente. Estrategia, código y diseño en un solo lugar." />
		<meta property="og:image" content="/images/readme-banner.png" />

		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://bugs-dev.com/" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content="Transformamos ideas en software potente. Estrategia, código y diseño en un solo lugar." />
		<meta property="twitter:image" content="/images/readme-banner.png" />
	</head>
	<body class="bg-brand-bg text-brand-text font-sans antialiased flex flex-col min-h-screen overflow-x-hidden">
		
		<slot name="navbar" />

		<main class="flex-grow">
			<slot />
		</main>

		<footer class="py-6 text-center text-sm opacity-60">
			© {new Date().getFullYear()} Bugs Dev.
		</footer>

		<a 
			href="https://wa.me/5493854973373?text=Hola%20Bugs%20Dev,%20me%20interesa%20iniciar%20un%20proyecto." 
			target="_blank" 
			rel="noopener noreferrer"
			class="fixed bottom-6 right-6 z-40 bg-[#25D366] text-white p-3 md:p-4 rounded-full shadow-xl hover:scale-110 hover:shadow-green-500/30 transition-all duration-300 flex items-center justify-center group"
			aria-label="Contactar por WhatsApp"
			>
			<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
				<path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"/>
